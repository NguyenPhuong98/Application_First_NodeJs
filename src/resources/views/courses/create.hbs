<div class="mt-4">
    <h1>Đăng khóa học</h1>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="name" class="label-input">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" >
        </div>
        <div class="form-group">
            <label for="description" class="label-input">Mô tả</label>
            <input type="text" class="form-control" id="description" name="description" >
        </div>
        <div class="form-group">
            <label for="videoId" class="label-input">Id Video</label>
            <input type="text" class="form-control" id="videoId" name="videoId" >
        </div>
        <div class="form-group">
            <label for="level" class="label-input">Mức độ</label>
            <input type="text" class="form-control" id="level" name="level" >
        </div>
        <button type="submit" class="btn btn-primary btn-add-course">Thêm khóa học</button>
    </form>
</div>